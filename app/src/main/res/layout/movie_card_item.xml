<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_poster"
                android:layout_width="@dimen/iv_detail_width"
                android:layout_height="@dimen/iv_detail_height"
                android:contentDescription="@string/poster_description"
                android:layout_marginBottom="@dimen/iv_detail_margin_bottom"
                android:layout_marginEnd="@dimen/iv_detail_margin_end"
                android:layout_marginStart="@dimen/iv_detail_margin_start"
                android:layout_marginTop="@dimen/iv_detail_margin_top"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/iv_detail_margin_end"
                android:layout_marginLeft="@dimen/iv_detail_margin_start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/title_margin_left_start"
                android:layout_marginStart="@dimen/title_margin_left_start"
                android:layout_marginTop="@dimen/title_margin_top"
                android:text="@string/title"
                android:textStyle="bold"
                android:textSize="@dimen/title_text_size" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_attribute_size"
                android:layout_marginLeft="@dimen/tv_attribute_margin_left_start"
                android:layout_marginStart="@dimen/tv_attribute_margin_left_start"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/title_margin_left_start"
                android:layout_marginLeft="@dimen/title_margin_left_start"
                android:layout_marginTop="@dimen/layout_margin_top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textStyle="bold"
                    android:textSize="@dimen/tv_title_size" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tv_attribute_size"
                    android:layout_marginLeft="@dimen/title_margin_left_start"
                    android:layout_marginStart="@dimen/title_margin_left_start"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate"
                    android:textStyle="bold"
                    android:textSize="@dimen/tv_title_size"
                    android:layout_marginStart="@dimen/tv_rate_margin_start_left"
                    android:layout_marginLeft="@dimen/tv_rate_margin_start_left"/>

                <TextView
                    android:id="@+id/tv_votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tv_attribute_size"
                    android:layout_marginLeft="@dimen/title_margin_left_start"
                    android:layout_marginStart="@dimen/title_margin_left_start"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/title_margin_left_start"
                android:layout_marginStart="@dimen/title_margin_left_start"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:text="@string/overview"
                android:textStyle="bold"
                android:textSize="@dimen/tv_title_size" />

            <TextView
                android:id="@+id/tv_synopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tv_attribute_size"
                android:layout_marginLeft="@dimen/tv_attribute_margin_left_start"
                android:layout_marginStart="@dimen/tv_attribute_margin_left_start"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/title_margin_left_start"
                android:layout_marginStart="@dimen/title_margin_left_start"
                android:layout_marginTop="@dimen/layout_margin_top"
                android:text="@string/reviews"
                android:textStyle="bold"
                android:textSize="@dimen/tv_title_size" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_movieReviews"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />



        </LinearLayout>

    </ScrollView>
</android.support.v7.widget.CardView>