<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_authors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/title_margin_left_start"
        android:layout_marginStart="@dimen/title_margin_left_start"
        android:layout_marginTop="@dimen/layout_margin_top"
        android:textStyle="bold"
        android:textSize="@dimen/tv_attribute_size" />

    <TextView
        android:id="@+id/tv_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tv_attribute_size"
        android:layout_marginLeft="@dimen/tv_attribute_margin_left_start"
        android:layout_marginStart="@dimen/tv_attribute_margin_left_start"/>
</LinearLayout>